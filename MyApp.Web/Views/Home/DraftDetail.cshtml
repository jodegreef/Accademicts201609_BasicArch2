@model MyApp.Domain.DraftLegoSet

@using (Html.BeginForm("Save", "Home"))
{
    @Html.HiddenFor(m => m.Id)
    <div class="row">
        <div class="col-md-12">
            <div class="input-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
